<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/settings_list_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <CheckBox
            android:id="@+id/checbox_Selected_Sub_categoty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_gravity="left"
            android:button="@drawable/category_select_check_box_selector" />

        <TextView
            android:id="@+id/category_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/checbox_Selected_Sub_categoty"
            android:layout_alignBottom="@+id/checbox_Selected_Sub_categoty"
            android:layout_gravity="center"
            android:layout_toRightOf="@+id/checbox_Selected_Sub_categoty"
            android:gravity="center_horizontal"
            android:paddingLeft="10dp"
            android:text="CodeLearn Chapter 1"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/mask_unmask_checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/category_name"
            android:layout_alignBottom="@+id/category_name"
            android:layout_alignParentRight="true"
            android:layout_gravity="center|right"
            android:button="@drawable/mask_selector" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_alignParentBottom="true"
        android:background="#E0E0E0" />

</RelativeLayout>