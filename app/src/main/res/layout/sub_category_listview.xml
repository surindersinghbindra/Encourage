<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/sub_category_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_toLeftOf="@+id/whilteBookSub"
        android:layout_toRightOf="@+id/checbox_sub_categoty"
        android:text="No Category Selected"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <CheckBox
        android:id="@+id/checbox_sub_categoty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/sub_category_name"
        android:layout_alignBottom="@+id/sub_category_name"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"
        android:button="@drawable/category_select_check_box_selector"
        android:focusable="false" />

    <ImageView
        android:id="@+id/whilteBookSub"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:src="@drawable/whitebook" />

</RelativeLayout>