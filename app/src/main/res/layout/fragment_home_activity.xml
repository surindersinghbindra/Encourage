<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/inspirationCover"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:clickable="false"
        android:scaleType="fitXY"
        android:src="@drawable/inspirationfinal9" />

    <!--
         <ImageView
        android:id="@+id/LionRoar1"
        
       android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/logo" />  -->

    <View
        android:id="@+id/strit1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/inspirationCover"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:background="@android:color/background_dark" />

    <TextView
        android:id="@+id/tv_inspration_awaits"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/strit1"
        android:layout_margin="2dp"
        android:background="@android:color/white"
        android:gravity="center"
        android:text="INSPIRATIONS AWAITS"
        android:textColor="@android:color/background_dark" />

    <View
        android:id="@+id/strut12"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/tv_inspration_awaits"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:background="@android:color/background_dark" />

    <ListView
        android:id="@+id/forlistfragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/strut12"
        android:scrollbars="none" >
    </ListView>

    <RelativeLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#88666666"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/ivInstruction1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:scaleType="fitXY"
        />

        <ImageView
            android:id="@+id/ivInstruction2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:scaleType="fitXY"
          
            android:visibility="gone" />

        <ImageView
            android:id="@+id/ivInstruction3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:scaleType="fitXY"

            android:visibility="gone" />
    </RelativeLayout>

</RelativeLayout>