<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/writeOwn"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/logowithEmailIdLogo"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/logo"/>

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center_horizontal"
                android:text="Encourage Others"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/black"
                android:textSize="20sp"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/yourEmailId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:text="USERNAME:"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/black"/>

        <EditText
            android:id="@+id/EmailId"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_margin="3dp"
            android:background="@drawable/bg_grey"
            android:gravity="center_horizontal"
            android:hint="username"
            android:inputType="textEmailAddress"
            android:maxLength="20"
            android:paddingTop="15dp"
            android:singleLine="true"
            android:textColor="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/yourEmailId1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:text="Which sub-category:"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/black"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@drawable/bg_yellow"
            android:orientation="horizontal">

            <ProgressBar
                android:id="@+id/progressbarSmall"
                style="@android:style/Widget.ProgressBar.Small"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:indeterminateTint="#26A69A"
                android:indeterminateTintMode="multiply"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/selectionType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="right"
                android:paddingRight="15dp"
                android:text="SELECT"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/black"
                android:textSize="15sp"/>

            <Spinner
                android:id="@+id/subcategoryspinner"
                style="@android:style/Widget.Holo.Light.Spinner"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:paddingLeft="10dp"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/encouragetheworldonemailid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:text="Encourage the world:"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/black"/>

        <EditText
            android:id="@+id/encouragingQuote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_margin="3dp"
            android:background="@drawable/bg_grey"
            android:gravity="center_horizontal"
            android:maxLines="3"
            android:minLines="3"
            android:padding="5dp"
            android:text="Please write your quote here"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/holo_red_dark"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:gravity="left|center"
            android:orientation="horizontal">

            <CheckBox

                android:id="@+id/cb_policy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                />

            <TextView

                android:id="@+id/tv_policy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:minLines="2"
                android:text="@string/policy"
                android:textSize="12sp"/>

        </LinearLayout>


        <Button
            android:id="@+id/sendButton"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:background="@drawable/bg_button_rounded"
            android:drawableRight="@drawable/sendicon1"
            android:text="SEND IT"
            android:textColor="@android:color/white"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/help_screen_writeYourOwn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorHelpScreens"
        android:visibility="gone">

        <ImageView
            android:id="@+id/encourageothersscreen3"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:scaleType="fitXY"

            android:visibility="visible"/>
    </RelativeLayout>

</RelativeLayout>