<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/profile_cover_image123"
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:src="@drawable/logo" />

    <ListView
        android:id="@+id/selected_categories_settings1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/struts12"
        android:scrollbars="none" >
    </ListView>

    <View
        android:id="@+id/struts1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/profile_cover_image123"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:background="@android:color/background_dark" />

    <TextView
        android:id="@+id/subcategoryNameInAllCat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_cover_image123"
        android:layout_centerHorizontal="true"
        android:layout_margin="2dp"
        android:text="Loading..."
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <View
        android:id="@+id/struts12"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/subcategoryNameInAllCat"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:background="@android:color/background_dark" />

    <!--
         <TextView
        android:id="@+id/subcategoryNameInAllCat123"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/profile_cover_image123"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="30dp"
        android:text="Lading..."
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/background_dark" />
    -->

</RelativeLayout>